<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.drivecomputing.logApp"
        versionCode="10"
        version   = "1.0.0">

  <!-- versionCode is optional and Android only -->

  <name>Log Application</name>

  <description>
    Logging System App
  </description>

  <author href="http://www.drivecomputing.co.uk" email="jasonm@drivecomputing.co.uk">
    Drive Computer Services Ltd
  </author>

  <preference name="phonegap-version" value="2.5.0" />
  <preference name="detect-data-types" value="true" />
  <preference name="exit-on-suspend" value="true" />
  <preference name="splash-screen-duration" value="3000" />
  <preference name="webviewbounce" value="false" />

  <icon src="icon.png" />
  <icon src="img/bliss-blackberry.png" gap:platform="blackberry" />
  <icon src="icons/ios/icon.png" gap:platform="ios" width="57" height="57" />
  <icon src="icons/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
  <icon src="icons/ios/icon@2x.png" gap:platform="ios" width="114" height="114" />
  <!-- retina iPad support: PhoneGap 2.5.0+ only -->
  <icon src="icons/ios/icon-72@2x.png" gap:platform="ios" width="144" height="144" />

  <gap:splash src="splash.png" />
  <plugin name="Storage" value="org.apache.cordova.Storage" />
  <feature id="blackberry.widgetcache" required="true" version="1.0.0.0" />
  <feature name="http://api.phonegap.com/1.0/camera"/>
  <feature name="http://api.phonegap.com/1.0/network"/>
  <feature name="http://api.phonegap.com/1.0/file"/>

  <gap:plugin name="BarcodeScanner" /> <!-- latest release -->

</widget>